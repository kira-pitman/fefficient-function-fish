<div class="container">
  {{#each fishingTrips}}
  <div class="fishingTrip">
    <div><img class="fishingTripImage" src="{{image}}" alt="Fishing trip {{name}}"/></div>
    <div class="summary-text"><a  href="/fishing-trip/{{id}}">Fishing trip {{id}}</a></div> 
    <div class="summary-text">Date: {{date}}</div>
    <div class="summary-text">Number of fish: {{fish.length}}</div>
  </div>
  {{/each}}
</div>
